<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/rootView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/phaedraGreen"
    tools:context="com.aadimator.android.paktext.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/pictureView"
        android:layout_width="381dp"
        android:layout_height="502dp"
        android:background="@color/phaedraGreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="1dp">

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:background="@android:color/transparent"
            android:hint="ٹائپ کریں"
            android:paddingEnd="32dp"
            android:paddingStart="32dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textColorHint="#44FFFFFF"
            android:textDirection='anyRtl'
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="-4dp"
            tools:layout_editor_absoluteY="5dp"/>
    </android.support.constraint.ConstraintLayout>

    <ImageButton
        android:id="@+id/imageButtonChangeColor"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/ic_color_lens"
        />

    <ImageButton
        android:id="@+id/imageButtonTextSize"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageButtonChangeColor"
        app:srcCompat="@drawable/ic_format_size"
        android:layout_marginStart="16dp"/>

    <ImageButton
        android:id="@+id/imageButtonChangeAlignment"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="10dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageButtonTextSize"
        app:srcCompat="@drawable/ic_format_align_right"
        android:layout_marginStart="10dp"/>

    <ImageButton
        android:id="@+id/imageButtonSaveImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageButtonChangeAlignment"
        app:srcCompat="@drawable/ic_save"
        android:layout_marginStart="16dp"/>

</android.support.constraint.ConstraintLayout>
